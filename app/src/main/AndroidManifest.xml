<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soten.genieforum">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GenieForumApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.GenieForum">
        <activity
            android:name=".ui.select.ContentSelectActivity"
            android:theme="@style/Theme.GenieForum.Select"
            android:label="@string/title_activity_content_select" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.GenieForum.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>